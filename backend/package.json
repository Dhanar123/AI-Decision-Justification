{
  "name": "ai-decision-justification-tracker-backend",
  "version": "1.0.0",
  "description": "Backend for AI Decision Justification Tracker",
  "main": "server.js",
  "scripts": {
    "start": "npx prisma generate && npx prisma db push --accept-data-loss && node server.js",
    "start:prod": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:whitebox": "jest tests/whitebox --coverage",
    "test:acceptance": "jest tests/acceptance --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.0.0",
    "supertest": "^7.1.4"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
